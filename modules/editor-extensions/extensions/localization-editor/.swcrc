{
    "$schema": "https://json.schemastore.org/swcrc",
    "module": {
        "type": "commonjs"
    },
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "decorators": true,
            "decoratorsBeforeExport": true,
            "importMeta": true
        },
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
        },
        "target": "es2017",
        // Requires v1.2.50 or upper and requires target to be es2016 or upper.
        "keepClassNames": true
    },
    "minify": false
}
