{
    "name": "reference-image",
    "version": "1.0.0",
    "package_version": 2,
    "description": "Reference Image",
    "author": "Cocos Creator",
    "main": "./dist/browser.js",
    "scripts": {
        "build:css": "node ./build/build-css.js",
        "build": "node ./unpack/index.js"
    },
    "panels": {
        "default": {
            "title": "i18n:reference-image.name",
            "main": "./dist/panel/index.js",
            "icon": "./statics/icon.png",
            "flags": {
                "save": true
            },
            "size": {
                "width": 500,
                "height": 300,
                "min-width": 500,
                "min-height": 300
            }
        }
    },
    "contributions": {
        "menu": [
            {
                "path": "i18n:menu.panel",
                "label": "i18n:reference-image.name",
                "icon": "./statics/icon.png",
                "message": "open"
            }
        ],

        "shortcuts": [
            {
                "message": "open",
                "win": "ctrl+9",
                "mac": "cmd+9"
            },
            {
                "message": "shortcutsMoveRight",
                "win": "win+right",
                "mac": "cmd+right"
            },
            {
                "message": "shortcutsMoveLeft",
                "win": "win+left",
                "mac": "cmd+left"
            },
            {
                "message": "shortcutsMoveUp",
                "win": "win+up",
                "mac": "cmd+up"
            },
            {
                "message": "shortcutsMoveDown",
                "win": "win+down",
                "mac": "cmd+down"
            }
        ],

        "scene": {
            "custom": "./dist/contributions/scene-toolbars.js",
            "script": "./dist/contributions/scene-walker.js"
        },

        "messages": {
            "open": {
                "methods": ["open"]
            },
            "scene:ready": {
                "methods": ["default.scene:ready"]
            },
            "shortcutsMoveRight": {
                "methods": [
                    "default.shortcutsMoveRight"
                ]
            },
            "shortcutsMoveLeft": {
                "methods": [
                    "default.shortcutsMoveLeft"
                ]
            },
            "shortcutsMoveUp": {
                "methods": [
                    "default.shortcutsMoveUp"
                ]
            },
            "shortcutsMoveDown": {
                "methods": [
                    "default.shortcutsMoveDown"
                ]
            }
        },

        "profile": {
            "reference-image": {
                "show": {
                    "type": "boolean",
                    "default": true
                },
                "root-path": {
                    "type": "string",
                    "default": ""
                },
                "referenceImageConfig": {
                    "images": [],
                    "sceneUUID": {},
                    "scene": ""
                },
                "opacity": {
                    "type": "number",
                    "default": 50
                }
            }
        }
    },
    "dependencies": {
        "@types/node": "^14.14.35",
        "fs-extra": "^9.1.0"
    }
}
