{
    "$schema": "https://schemastore.azurewebsites.net/schemas/json/tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "inlineSourceMap": false,
        "inlineSources": false,
        "esModuleInterop": true,
        "strict": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": ".",
        "moduleResolution": "node",
        "importHelpers": true,
        "types": [
            "node",
            "webpack/module",
            "sinon",
            "electron"
        ],
        "lib": [
            "DOM",
            "ScriptHost",
            "ES2020"
        ],
        "paths": {
            "@/*": ["./source/*"],
            "~/*": ["./*"]
        }
    }
}
