    "version": "0.2.0",
    "configurations": [
        {
            "name": "Unit Test",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest.js"
            },
            "args": [
                "--logHeapUsage"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "name": "Unit Test Current File",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest.js"
            },
            "args": [
                "${fileBasenameNoExtension}"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Cocos Creator engine",
            "program": "${workspaceFolder}\\build\\gift-cli.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "args": [
                "--verbose",
                "--input", "X:\\Dev\\Test\\gift\\input\\cc-before-rollup.d.ts", "X:\\Dev\\Test\\gift\\input\\virtual-cc.d.ts",
                "--root", "cc",
                "--name", "cc",
                "--output", "X:\\Dev\\Test\\gift\\output"
            ]
        },
    ]
}