{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./source",
    "strict": true,
    "types": [
      "node",
      "@types/mocha",
      "@wdio/globals/types"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["./dist/**/*", "node_modules"],
  "include": ["./source"]
}