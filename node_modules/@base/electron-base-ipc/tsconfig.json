{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./source",
    "strict": true,
    "types": [
      "node",
      "electron",
      "@types/mocha"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["dist/**/*", "node_modules"],
  "include": ["source"]
}