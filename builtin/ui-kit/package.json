{
    "name": "ui-kit",
    "version": "1.0.0",
    "package_version": 2,
    "author": "Cocos Creator",
    "description": "CocosCreator UI Kit",
    "main": "./dist/browser.js",
    "windows": "./static/scripts/windows.js",

    "panels": {
        "panel": {
            "title": "i18n:ui-kit.title",
            "main": "./dist/panels/preview/index.js",
            "size": {
                "min-width": 600,
                "min-height": 600,
                "width": 1000,
                "height": 700
            }
        },
    
        "color-picker": {
            "title": "color-picker",
            "main": "./dist/panels/color-picker/index.js",
            "type": "kit",
            "flags": {
                "resizable": false
            },
            "size": {
                "width": 224,
                "height": 383
            }
        },
    
        "gradient-picker": {
            "title": "gradient-picker",
            "main": "./dist/panels/gradient-picker/index.js",
            "type": "kit",
            "flags": {
                "resizable": false
            },
            "size": {
                "width": 490,
                "height": 320
            }
        },
    
        "searcher": {
            "type":"kit",
            "main": "./dist/panels/searcher/index.js",
            "flags": {
                "resizable": false
            },
            "size": {
                "min-width": 125,
                "min-height": 225,
                "width": 350,
                "height": 450
            }
        }
    },

    "contributions": {
        "menu": [
            {
                "path": "i18n:menu.develop",
                "label": "i18n:ui-kit.title",
                "message": "open",
                "group": "help"
            }
        ],

        "shortcuts": [
            {
                "message": "searcher-up",
                "win": "up",
                "mac": "up",
                "when": "PanelName === 'ui-kit.searcher'"
            },
            {
                "message": "searcher-down",
                "win": "down",
                "mac": "down",
                "when": "PanelName === 'ui-kit.searcher'"
            },
            {
                "message": "searcher-enter",
                "win": "enter",
                "mac": "enter",
                "when": "PanelName === 'ui-kit.searcher'"
            },
            {
                "message": "searcher-esc",
                "win": "esc",
                "mac": "esc",
                "when": "PanelName === 'ui-kit.searcher'"
            }
        ],

        "messages": {
            "open": {
                "methods": ["open"]
            },

            "reset": {
                "methods": ["searcher.reset", "gradient-picker.reset", "color-picker.reset"]
            },

            "searcher-up": {
                "methods": ["searcher.up"]
            },
            "searcher-down": {
                "methods": ["searcher.down"]
            },
            "searcher-enter": {
                "methods": ["searcher.enter"]
            },
            "searcher-esc": {
                "methods": ["searcher.esc"]
            }
        }
    }
}
